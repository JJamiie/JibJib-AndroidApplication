<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:id="@+id/rel_item_question"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLyt_item_header"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:background="@color/pink"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt_from_language"
                        style="@style/text_item_question_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EN" />

                    <ImageView
                        android:id="@+id/img_arrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/pic_arrow" />

                    <TextView
                        android:id="@+id/txt_to_language"
                        style="@style/text_item_question_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TH" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLyt_item_footer"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/pinkDark"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_number_of_answers"
                            style="@style/text_item_question_footer.large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="10" />

                        <TextView
                            style="@style/text_item_question_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="answers" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_number_of_views"
                            style="@style/text_item_question_footer.large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7" />

                        <TextView
                            style="@style/text_item_question_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="views" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_number_of_votes"
                            style="@style/text_item_question_footer.large"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="19" />

                        <TextView
                            style="@style/text_item_question_footer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="votes" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp">

                <TextView
                    android:id="@+id/txt_item_title"
                    style="@style/text_item_question_detail.large"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Title" />

                <TextView
                    android:id="@+id/txt_item_description"
                    style="@style/text_item_question_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:text="Description" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_time_created"
                        style="@style/text_item_question_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 min ago" />

                    <TextView
                        android:id="@+id/txt_name_user_created"
                        style="@style/text_item_question_detail.pink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:text="JJamie" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/selector_overlay" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
